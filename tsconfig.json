{
  "include": ["src", "tests", "build.mjs"],
  "exclude": ["lib"],
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./types",
    "noEmit": false,
    "rootDir": ".",

    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "target": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "module": "NodeNext",
    "lib": [ "esnext", "DOM", "DOM.Iterable" ],
    "types": [ "node" ]
  },
  "references": [
  ]
}
